<div class="container" id="navbar-and-transcript">
  <ul class="nav nav-tabs">
    <li class="active" id="nav-amazon-tab" role="presentation">
    	<a data-toggle="tab" href="#amazon-navtab">Amazon</a></li>
    <li id="nav-google-tab" role="presentation">
    	<a data-toggle="tab" href="#google-navtab">Google</a></li>
    <li id="nav-ibm-tab" role="presentation">
    	<a data-toggle="tab" href="#ibm-navtab">IBM</a></li>
  </ul>

  <div class="tab-content">
    <div id="amazon-navtab" class="tab-pane fade in active" aria-labelledby="nav-amazon-tab">
      <p>AMAZON TRANSCRIPT BELOW</p>
    </div>
    <div id="google-navtab" class="tab-pane fade" aria-labelledby="nav-google-tab">
      <p>GOOGLE TRANSCRIPT BELOW</p>
    </div>
    <div id="ibm-navtab" class="tab-pane fade" aria-labelledby="nav-ibm-tab">
      <p>IBM TRANSCRIPT BELOW</p>
    </div>
  </div>
</div>

<div class="btn-group-justified" role="group" aria-label="...">

		<div class="btn-group" role="group">
			<button type="button" class="btn btn-circle" id="startRecord">
				<span class="glyphicon glyphicon-play" aria-hidden="true"></span>
			</button>
	</div>

	<div class="btn-group" role="group">
			<button type="button" class="btn btn-circle" id="pauseRecord">
				<span class="glyphicon glyphicon-pause"  aria-hidden="true"></span>
			</button>
	</div>

	<div class="btn-group" role="group">
			<button type="button" class="btn btn-circle" id="stopRecord">
				<span class="glyphicon glyphicon-stop" aria-hidden="true"></span>
			</button>
	</div>
</div>







